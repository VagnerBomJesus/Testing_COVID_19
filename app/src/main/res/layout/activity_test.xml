<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorText2"
    >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical"
        android:background="@color/colorText2"
        tools:context=".ui.TestActivity">

        <TextView
            android:id="@+id/NumAsk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Questions: 1/10"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="20sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/Ask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/question_buttons_background"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="21sp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:text="Lorem Ipsum dolore lorem Ipsum dolore lorem Ipsum dolore lorem Ipsum dolore?" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <include android:id="@+id/news_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/item_questions"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/ConfirmNext"
                android:padding="15dp"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textAllCaps="true"
                android:background="@drawable/confirm_buttons_background"
                android:text="Next" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>