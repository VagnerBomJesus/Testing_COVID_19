            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/colorButton"
                android:text="Save"
                android:textColor="@color/colorText2" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>